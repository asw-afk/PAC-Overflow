<div class="container d-flex  vh-100 posts-main">
        <div class=" col-9 posts-list ">
            {{#if logged_in}}
           <div class="post-btn ">             
                <button id="create-post" href="">Create Post</button>                  
           </div> 
        {{/if}}
       {{#each posts as |post logged_in|}}

             <div  class="post  w-100" data-post-id ={{post.id}}>
                <div>
                    <h3 class="author" id="authorId"><strike>{{post.user.name}}</strike></h3>
                    <p>{{post.body}}</p>
                    
                    {{#if ../logged_in}}

                    <div class="post-cmt">
                        <button class="comment-btn">
                    <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
  <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
                    </svg>
                        </button>

                     <button class="vote-up-btn">  
                  <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5"/>
                    </svg>
                    </button>

                    <span  class="vote pe-2" >{{post.votes}}</span>
                         <button class="vote-down-btn"> 
                    <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1"/>
                    </svg>
                    </button>
            
                    </div>
                     {{/if}}  
                  
            </div>
                <div class="comment-input hidden">
                 <textarea placeholder="Write a comment"></textarea>
                 <button class="add-comment" type="submit">Add</button>

                </div>
                 
            </div>

             {{/each}}
</div>
       
   <script type="text/javascript" src="/js/post.js"></script>